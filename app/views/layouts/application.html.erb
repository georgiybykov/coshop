<!DOCTYPE html>
<html>
  <head>
    <title>Coshop Books Online Store</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag 'logo.png', alt: 'Bookshelf of Warrior' %>
      <span class="title"><%= @page_title %></span>
      <p><%= l @time, format: :short %></p>
    </div>
    <div id="columns">
      <div id="side">
        <ul>
          <li><%= link_to 'Home', store_path %></li>
          <li><%= link_to 'Line Items', line_items_path %></li>
          <li><%= link_to 'Carts', carts_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><a href="http://www..../contacts">Contacts</a></li>
        </ul>
        <% if @counter %>
          <p><%= pluralize(@counter, 'time') %></p>
        <% end %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
